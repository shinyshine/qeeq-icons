{
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "typeRoots": ["lib/@types", "node_modules/@types"],
        "outDir": "./lib"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "src/tasks/templates/**/*"
    ]
}